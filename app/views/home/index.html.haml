%section{:id => 'home'}
  .slideshow
    .slides
      - unless @album.nil?
        - @album.images.each do |image|
          %img{:src => image.image.url, :alt => image.id}
    .tag
      %img{:src => '/assets/build_the_world.png', :alt => 'build_the_world'}
    .nav
      %a{:href => '#prev', :class => 'prev'} <
      %a{:href => '#next', :class => 'next'} >
  .container
    .sidebar
      %h3 Testimonials
      %h4 What Our Customers Are Saying
      .testimonials
        - @testimonials.each do |testimonial|
          .testimonial
            %q
              = testimonial.quote
            %small= testimonial.name
    .content
      .top
        .left
          - unless @top_left_blurb.nil?
            %h2= @top_left_blurb.title
            %h3= @top_left_blurb.subtitle
            %div= raw @top_left_blurb.content
        .right
          .posts
            - @posts.each do |post|
              .post{:'data-id' => post.id}
                %h3.date
                  %span.day= post.created_at.day
                  %span.month= post.created_at.strftime("%b")
                %h3
                  = link_to post.title, post_path(post)
                %p= post.summary
            .nav
              %a{:href => (post_path(@posts.first) if @posts.first), :class => 'more'} Read More...
              %a{:href => '#prev', :class => 'prev'} <
              %a{:href => '#next', :class => 'next'} >
      .bottom
        .left
          - unless @bottom_left_blurb.nil?
            %h2= @bottom_left_blurb.title
            %img{:src => @bottom_left_blurb.image.url, :alt => @bottom_left_blurb.title}
            %h3= @bottom_left_blurb.subtitle
            %div= raw @bottom_left_blurb.content
            %p
              = link_to 'More', service_path, :class => 'read_more'
        .middle
          - unless @bottom_middle_blurb.nil?
            %h2= @bottom_middle_blurb.title
            %img{:src => @bottom_middle_blurb.image.url, :alt => @bottom_middle_blurb.title}
            %h3= @bottom_middle_blurb.subtitle
            %div= raw @bottom_middle_blurb.content
            %p
              = link_to 'More', service_path, :class => 'read_more'
        .right
          - unless @bottom_right_blurb.nil?
            %h2= @bottom_right_blurb.title
            %img{:src => @bottom_right_blurb.image.url, :alt => @bottom_right_blurb.title}
            %h3= @bottom_right_blurb.subtitle
            %div= raw @bottom_right_blurb.content
            %p
              = link_to 'More', service_path, :class => 'read_more'