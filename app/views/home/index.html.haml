%section{:id => 'home'}
  .slideshow
    .slides
      - unless @album.nil?
        - @album.images.each do |image|
          %img{:src => image.image.url, :alt => image.id}
    .tag
      = image_tag('build_the_world.png', :alt => 'build_the_world')
    .nav
      %a{:href => '#prev', :class => 'prev'} <
      %a{:href => '#next', :class => 'next'} >
  .container
    .sidebar
      %h3 Testimonials
      %h4 What Our Customers Are Saying
      .testimonials
        - @testimonials.each do |testimonial|
          .testimonial
            %q
              = testimonial.quote
            %small= testimonial.name
        .nav
          %a{:href => '#prev', :class => 'prev'} <
          %a{:href => '#next', :class => 'next'} >
    .content
      .top
        .left
          - unless @top_left_blurb.nil?
            %h2= @top_left_blurb.title
            %h3= @top_left_blurb.subtitle
            %div= raw @top_left_blurb.content
        .right
          - unless @posts.empty?
            .posts
              - @posts.each do |post|
                - if post['type'] == 'text'
                  .post{:'data-id' => post['id']}
                    %h3.date
                      %span.day= Date.parse(post['date']).day
                      %span.month= Date.parse(post['date']).strftime("%b")
                    %h3
                      = link_to post['title'], post['post_url']
              .nav
                %a{:href => 'http://blog.sshomesincorporated.com', :class => 'more'} Read More...
                %a{:href => '#prev', :class => 'prev'} <
                %a{:href => '#next', :class => 'next'} >
          .houzz
            %table{cellpadding: "0", cellspacing: "0", style: "width: 181px;"}
              %tr
                %td
                  %a{href: "https://www.houzz.com/pro/sshomesnebraska/ss-homes-inc"}
                    %img{alt: "Remodeling and Home Design", border: "0", height: "25", src: "https://www.houzz.com/res/1882/pic/badge181_25.png?v=1882", width: "181"}/
              %tr
                %td{align: "center", style: "font-family: arial, sans-serif; font-size: 11px; border: none; padding: 5px;"}
                  %a{href: "https://www.houzz.com/professionals/home-builders/c/Columbus--NE"} Columbus Home Builders
          .login
            %h6 Client Login
            .login_wrapper
              %iframe{src: "https://www.buildertrend.net/loginFrame.aspx?builderID=3232&bgcolor=&fcolor=&uwidth=100&pwidth=100"}
      .bottom
        .left
          - unless @bottom_left_blurb.nil?
            %h2= @bottom_left_blurb.title
            %img{:src => @bottom_left_blurb.image.url, :alt => @bottom_left_blurb.title}
            %h3= @bottom_left_blurb.subtitle
            %div= raw @bottom_left_blurb.content
            %p
              = link_to 'More', service_path, :class => 'read_more'
        .middle
          - unless @bottom_middle_blurb.nil?
            %h2= @bottom_middle_blurb.title
            %img{:src => @bottom_middle_blurb.image.url, :alt => @bottom_middle_blurb.title}
            %h3= @bottom_middle_blurb.subtitle
            %div= raw @bottom_middle_blurb.content
            %p
              = link_to 'More', service_path, :class => 'read_more'
        .right
          - unless @bottom_right_blurb.nil?
            %h2= @bottom_right_blurb.title
            %img{:src => @bottom_right_blurb.image.url, :alt => @bottom_right_blurb.title}
            %h3= @bottom_right_blurb.subtitle
            %div= raw @bottom_right_blurb.content
            %p
              = link_to 'More', service_path, :class => 'read_more'
