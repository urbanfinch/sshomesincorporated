      var btDomain = "http://www.buildertrend.net";
    %script{src: "http://www.buildertrend.net/leads/contactforms/js/btLeadsContactFormClient.js", type: "text/javascript"}
    %iframe#btLeadsContactiFrame{src: "http://www.buildertrend.net/leads/contactforms/leadGenerator.aspx?builderID=3232&theme=a&url=http://www.sshomesincorporated.com/contact", style: "width:400px;height:400px;border:0;background:transparent;"}
